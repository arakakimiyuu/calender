<div>
  <h1>カレンダー</h1>
  <div class="row">
    <div class="col-md-3">
      <div class="schedule">今後の予定一覧</div>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>日程</th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
           <tr>
             <td><%= link_to blog.title,blog %></td>
             <td><%= blog.start_time.strftime("%m-%d") %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
      <%= form_with model: @blog, url: blogs_path, method: :post do |f| %>
       <div class="title">
         <div class="form_tag">タイトル</div>
         <%= f.text_field :title %>
       </div>
       <div class="content">
         <div class="form_tag">内容</div>
         <%= f.text_field :content %>
       </div>
       <div class="time">
         <div class="form_tag">時間</div>
         <%= f.datetime_select :start_time %>
       </div>
       <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
     <%= month_calendar events: @blogs do |date, blog| %>
      <%= date.day %>
      <% @blogs.each do |blog| %>
       <%= link_to blog.title, blog %>
      <% end %>
     <% end %>
    </div>
  </div>
</div>