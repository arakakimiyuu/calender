<div class='container px-5 px-0'>
  <div class="row">
    <div class="col-md-6">
      <%= form_with model: @blog, url: blog_path, method: :patch do |f| %>
       <div class="title">
         <div class="form_tag">タイトル</div>
         <%= f.text_field :title %>
       </div>
       <div class="content">
         <div class="form_tag">内容</div>
         <%= f.text_field :content %>
       </div>
       <div class="time">
         <div class="form_tag">時間</div>
         <%= f.datetime_select :start_time %>
       </div>
       <div class="pt-2">
          <%= f.submit "登録する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>